# TrustChain LTO - Production Environment Configuration (Without IPFS)

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://ltoblockchain.duckdns.org
APP_BASE_URL=https://ltoblockchain.duckdns.org

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lto_blockchain
DB_USER=lto_user
DB_PASSWORD=lto_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Blockchain Configuration
BLOCKCHAIN_MODE=fabric

# Fabric Network Configuration
FABRIC_NETWORK_CONFIG=./network-config.json
FABRIC_CHANNEL=ltochannel
FABRIC_CHAINCODE=vehicle-registration
FABRIC_CHAINCODE_VERSION=1.0
FABRIC_AS_LOCALHOST=false

# Fabric CA Configuration
FABRIC_CA_LTO_URL=https://ca-lto:7054
FABRIC_CA_HPG_URL=https://ca-hpg:7054
FABRIC_CA_INSURANCE_URL=https://ca-insurance:7054

# Fabric CA Admin Credentials (change in production)
FABRIC_CA_ADMIN_USERNAME=admin
FABRIC_CA_ADMIN_PASSWORD=adminpw

# Organization MSP IDs
FABRIC_MSP_LTO=LTOMSP
FABRIC_MSP_HPG=HPGMSP
FABRIC_MSP_INSURANCE=InsuranceMSP

# Storage Configuration
STORAGE_MODE=ipfs

# IPFS Configuration
IPFS_HOST=ipfs
IPFS_PORT=5001
IPFS_PROTOCOL=http

# JWT Authentication
JWT_SECRET=change-this-in-production-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Document Storage
ENCRYPT_FILES=false
ENCRYPTION_KEY=change-this-32-character-encryption-key-here
